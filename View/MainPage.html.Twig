<h1 class="HomeOptimizer">Home Optimizer</h1>
<tr>
    <th>Author</th>
    <th>Id</th>
    <th>Publisher</th>
    <th>Title</th>
</tr>

{% for book in books %}
    <tr>
        <td>{{ book.Author }}</td>
        <td>{{ book.Id }}</td>
        <td>{{ book.Publisher }}</td>
        <td>{{ book.Title }}</td>
    </tr>
{% endfor %}
<p id="BudgetLimitTxt" onclick="move()">Budget Limit</p>
<div id="myProgress">
    <div id="myBar"></div>
    <script>
        function move() {
            var elem = document.getElementById("myBar");
            var width = 1;
            var id = setInterval(frame, 10);
            function frame() {
                if (width >= 100) {
                    clearInterval(id);
                } else {
                    width++;
                    elem.style.width = width + '%';
                }
            }
        }
    </script>
</div>
</body>
</html>